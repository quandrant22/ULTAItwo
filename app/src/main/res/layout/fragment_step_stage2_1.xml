<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textViewStepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_0_bold"
            android:text="Шаг 1: Продукты и услуги"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"/>

        <!-- Вопрос о продуктах/услугах -->
        <TextView
            android:id="@+id/textViewProductsServicesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_0_medium"
            android:text="Какие продукты или услуги вы предлагаете?"
            android:textColor="@color/beige"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Описание -->
        <TextView
            android:id="@+id/textViewProductsServicesDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_0_light"
            android:text="Информация подтягивается из первой анкеты. Вы можете изменить ответ."
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Поле для ввода продуктов/услуг -->
        <EditText
            android:id="@+id/editTextProductsServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:gravity="top|start"
            android:background="@drawable/text_field_background"
            android:hint="Опишите ваши продукты или услуги..."
            android:textColorHint="@color/gray_light"
            android:textColor="@color/white"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp"/>

        <!-- Кнопка завершения -->
        <Button
            android:id="@+id/buttonFinishStep1Stage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Завершить"
            android:textColor="#1E1E1E"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView> 
