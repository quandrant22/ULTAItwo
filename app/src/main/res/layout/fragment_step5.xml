<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".planer.stages.stage_1.Step5Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Заголовок шага -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шаг 5"
            android:textColor="#FFC107"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="8dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ПОВЕДЕНЧЕСКИЕ ХАРАКТЕРИСТИКИ"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_light"
            android:layout_marginBottom="24dp"/>
        
        <!-- Покупательские привычки и предпочтения -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какие у вашей ЦА покупательские привычки и предпочтения?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <CheckBox
            android:id="@+id/checkBoxOnlineShopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предпочтение онлайн-покупок"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxOfflineShopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Офлайн-покупок"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxMixedShopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Смешанный тип покупок"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxBrandedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Покупка товаров определенных брендов"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxNonBrandedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Покупка товаров без привязки к бренду"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxQualityPreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предпочтение качества товара"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxPricePreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предпочтение цены"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxConveniencePreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предпочтение удобства покупки"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
