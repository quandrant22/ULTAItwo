            android:textColor="@color/beige"
            android:buttonTint="@color/blue"
            android:layout_marginBottom="16dp"/>
            
        <!-- Способы принятия решений о покупке -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какие способы принятия решений о покупке?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <RadioGroup
            android:id="@+id/radioGroupDecisionMaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <RadioButton
                android:id="@+id/radioRationalDecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Рациональные (сравнение цен и характеристик товаров)"
                android:textColor="@color/beige"
                android:buttonTint="@color/blue"/>
                
            <RadioButton
                android:id="@+id/radioImpulsiveDecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Импульсивные (покупки под влиянием эмоций)"
                android:textColor="@color/beige"
                android:buttonTint="@color/blue"/>
                
            <RadioButton
                android:id="@+id/radioRecommendedDecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Основанные на рекомендациях других"
                android:textColor="@color/beige"
                android:buttonTint="@color/blue"/>
        </RadioGroup>
            
        <!-- Критерии выбора продукта -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По каким критериям ЦА принимают решения о выборе продукта или услуги?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <CheckBox
            android:id="@+id/checkBoxPriceCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена и стоимость"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxQualityCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Качество продукта или услуги"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxBrandCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Бренд и репутация"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
