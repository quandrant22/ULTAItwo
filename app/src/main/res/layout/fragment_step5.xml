            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какая у вашей ЦА частота и сезонность покупок?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <CheckBox
            android:id="@+id/checkBoxDailyPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ежедневные"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxWeeklyPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Еженедельные"
