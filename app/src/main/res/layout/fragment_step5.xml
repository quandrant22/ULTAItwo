            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxExperienceCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Опыт пользования и обслуживания"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxEcoCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Экологические и социальные аспекты"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxPersonalCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Личные предпочтения и вкусы"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxRecommendationCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рекомендации и реклама"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"
            android:layout_marginBottom="16dp"/>
            
