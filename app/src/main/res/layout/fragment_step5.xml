            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxMonthlyPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ежемесячные покупки"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
