            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предпочтение сезонных распродаж и скидок"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"
            android:layout_marginBottom="16dp"/>
            
        <!-- Сценарии использования продуктов или услуг -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какие у вашей сценарии использования продуктов или услуг?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <CheckBox
            android:id="@+id/checkBoxDailyUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ежедневное использование"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxAsNeededUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Использование по мере необходимости"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxRareUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редкое использование"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxHomeUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Использование дома"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxOfficeUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В офисе"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxTravelUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В путешествиях"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxPersonalUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Использование для личных нужд"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
