            android:layout_height="wrap_content"
            android:text="Какие факторы для них наиболее важны при принятии решения?"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <EditText
            android:id="@+id/editTextImportantFactors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Опишите важные факторы при принятии решения"
            android:textColorHint="#808080"
            android:textColor="@color/beige"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="16dp"/>
            
        <!-- Предпочтительные каналы коммуникации -->
