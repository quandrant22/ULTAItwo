<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".planer.stages.stage_1.Step3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Заголовок шага -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шаг 3"
            android:textColor="#FFC107"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="8dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Определить психологические характеристики целевой аудитории"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_light"
            android:layout_marginBottom="24dp"/>
        
        <!-- Психологические характеристики -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите психологические характеристики целевой аудитории"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <CheckBox
            android:id="@+id/checkBoxEmotional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Эмоциональные покупатели (принимают решения на основе эмоций)"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxRational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рациональные покупатели (тщательно анализируют покупки)"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxImpulsive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Импульсивные покупатели (часто покупают спонтанно)"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxValueSeeking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ищущие ценность (соотношение цена-качество)"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"/>
            
        <CheckBox
            android:id="@+id/checkBoxSociallyInfluenced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Социально-зависимые (подверженные влиянию отзывов и рекомендаций)"
            android:textColor="@color/beige"
            android:buttonTint="@color/blue"
            android:layout_marginBottom="16dp"/>
            
        <!-- Другие мотивации -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Опишите другие психологические мотивации"
            android:textColor="@color/beige"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_0_medium"
            android:layout_marginBottom="12dp"/>
            
        <EditText
            android:id="@+id/editTextOtherMotivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Другие психологические мотивации (необязательно)"
            android:textColorHint="#808080"
            android:textColor="@color/beige"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="24dp"/>
            
        <!-- Кнопка завершения шага -->
        <Button
            android:id="@+id/buttonFinishStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Завершить"
            android:textColor="#1E1E1E"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView> 